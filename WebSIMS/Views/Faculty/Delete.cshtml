@model WebSIMS.Models.FacultyListViewModel

@{
    ViewData["Title"] = "Delete Faculty";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Delete Faculty</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-controller="Faculty" asp-action="Index">Faculty</a></li>
        <li class="breadcrumb-item active">Delete</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <i class="fas fa-exclamation-triangle me-1"></i>
            Confirm Deletion
        </div>
        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <h5 class="alert-heading">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Warning!
                </h5>
                <p>Are you sure you want to delete this faculty member? This action cannot be undone.</p>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-primary mb-3">Account Information</h5>
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.Username)</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.Username)</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.Role)</label>
                        <p class="form-control-plaintext">
                            <span class="badge bg-info">@Html.DisplayFor(model => model.Role)</span>
                        </p>
                    </div>
                </div>

                <div class="col-md-6">
                    <h5 class="text-primary mb-3">Personal Information</h5>
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.FullName)</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.FullName)</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.Email)</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.Email)</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.Department)</label>
                        <p class="form-control-plaintext">
                            @if (!string.IsNullOrEmpty(Model.Department))
                            {
                                @Html.DisplayFor(model => model.Department)
                            }
                            else
                            {
                                <span class="text-muted">Not assigned</span>
                            }
                        </p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.HireDate)</label>
                        <p class="form-control-plaintext">
                            @if (Model.HireDate.HasValue)
                            {
                                @Model.HireDate.Value.ToString("MMMM dd, yyyy")
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </p>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" method="post">
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>
                        Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>
                        Delete Faculty
                    </button>
                </div>
            </form>
        </div>
    </div>
</div> 