@model IEnumerable<WebSIMS.Models.FacultyListViewModel>

@{
    ViewData["Title"] = "Faculty List";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Faculty Management</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Faculty</li>
    </ol>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <i class="fas fa-users me-1"></i>
                    Faculty Members
                </div>
                <a asp-action="Create" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus me-1"></i>
                    Add New Faculty
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="facultyTable">
                    <thead class="table-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.First().Username)</th>
                            <th>@Html.DisplayNameFor(model => model.First().FullName)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Phone)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Department)</th>
                            <th>@Html.DisplayNameFor(model => model.First().HireDate)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Role)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Username)</td>
                                <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                                <td>@Html.DisplayFor(modelItem => item.Department)</td>
                                <td>@(item.HireDate?.ToString("MM/dd/yyyy") ?? "N/A")</td>
                                <td>
                                    <span class="badge bg-info">@Html.DisplayFor(modelItem => item.Role)</span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.FacultyID" class="btn btn-info btn-sm">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.FacultyID" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.FacultyID" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#facultyTable').DataTable({
                responsive: true,
                order: [[1, 'asc']], // Sort by full name by default
                pageLength: 10,
                language: {
                    search: "Search faculty:",
                    lengthMenu: "Show _MENU_ faculty per page",
                    info: "Showing _START_ to _END_ of _TOTAL_ faculty",
                    paginate: {
                        first: "First",
                        last: "Last",
                        next: "Next",
                        previous: "Previous"
                    }
                }
            });
        });
    </script>
} 