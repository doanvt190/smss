@model WebSIMS.Models.FacultyListViewModel

@{
    ViewData["Title"] = "Faculty Details";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Faculty Details</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-controller="Faculty" asp-action="Index">Faculty</a></li>
        <li class="breadcrumb-item active">Details</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-user me-1"></i>
            Faculty Information
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-primary mb-3">Account Information</h5>
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.Username)</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.Username)</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.Role)</label>
                        <p class="form-control-plaintext">
                            <span class="badge bg-info">@Html.DisplayFor(model => model.Role)</span>
                        </p>
                    </div>
                </div>

                <div class="col-md-6">
                    <h5 class="text-primary mb-3">Personal Information</h5>
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.FullName)</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.FullName)</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.Email)</label>
                        <p class="form-control-plaintext">
                            <a href="mailto:@Model.Email">@Html.DisplayFor(model => model.Email)</a>
                        </p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.Phone)</label>
                        <p class="form-control-plaintext">
                            @if (!string.IsNullOrEmpty(Model.Phone))
                            {
                                <a href="tel:@Model.Phone">@Html.DisplayFor(model => model.Phone)</a>
                            }
                            else
                            {
                                <span class="text-muted">Not provided</span>
                            }
                        </p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.Department)</label>
                        <p class="form-control-plaintext">
                            @if (!string.IsNullOrEmpty(Model.Department))
                            {
                                @Html.DisplayFor(model => model.Department)
                            }
                            else
                            {
                                <span class="text-muted">Not assigned</span>
                            }
                        </p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.HireDate)</label>
                        <p class="form-control-plaintext">
                            @if (Model.HireDate.HasValue)
                            {
                                @Model.HireDate.Value.ToString("MMMM dd, yyyy")
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </p>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>
                    Back to List
                </a>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.FacultyID" class="btn btn-warning">
                        <i class="fas fa-edit me-1"></i>
                        Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.FacultyID" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>
                        Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 