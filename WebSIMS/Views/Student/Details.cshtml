@model WebSIMS.Models.StudentListViewModel

@{
    ViewData["Title"] = "Student Details";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="container-fluid px-4">
    <!-- Header with Back Button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mt-4 mb-2">Student Details</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index" class="text-decoration-none">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Student" asp-action="Index" class="text-decoration-none">Students</a></li>
                    <li class="breadcrumb-item active">@Model.FullName</li>
                </ol>
            </nav>
        </div>
        <div>
            <a asp-controller="Student" asp-action="Index" class="btn btn-outline-secondary me-2">
                <i class="fas fa-arrow-left me-1"></i>Back to Students
            </a>
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Edit" asp-route-id="@Model.StudentID" class="btn btn-warning">
                    <i class="fas fa-edit me-1"></i>Edit Student
                </a>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-xl-8">
            <!-- Student Profile Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <div class="d-flex align-items-center">
                        <div class="avatar-lg bg-primary rounded-circle d-flex align-items-center justify-content-center me-4">
                            <span class="text-white fw-bold fs-3">@Model.FirstName[0]@Model.LastName[0]</span>
                        </div>
                        <div>
                            <h4 class="mb-1">@Model.FullName</h4>
                            <div class="d-flex align-items-center gap-3">
                                <span class="badge bg-success">Student</span>
                                <span class="text-muted">ID: #@Model.StudentID</span>
                                <span class="text-muted">Username: @Model.Username</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="info-item">
                                        <label class="form-label fw-semibold text-muted small">First Name</label>
                                        <p class="mb-0 fw-medium">@Model.FirstName</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="info-item">
                                        <label class="form-label fw-semibold text-muted small">Last Name</label>
                                        <p class="mb-0 fw-medium">@Model.LastName</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="info-item">
                                        <label class="form-label fw-semibold text-muted small">Date of Birth</label>
                                        <p class="mb-0">@(Model.DateOfBirth?.ToString("MMMM dd, yyyy") ?? "Not specified")</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="info-item">
                                        <label class="form-label fw-semibold text-muted small">Gender</label>
                                        <p class="mb-0">@(Model.Gender ?? "Not specified")</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <i class="fas fa-envelope me-2 text-primary"></i>
                    <span class="fw-semibold">Contact Information</span>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="form-label fw-semibold text-muted small">Email Address</label>
                                <p class="mb-0">
                                    <a href="mailto:@Model.Email" class="text-decoration-none">
                                        <i class="fas fa-envelope me-1 text-muted"></i>@Model.Email
                                    </a>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="form-label fw-semibold text-muted small">Phone Number</label>
                                <p class="mb-0">
                                    @if (!string.IsNullOrEmpty(Model.Phone))
                                    {
                                        <a href="tel:@Model.Phone" class="text-decoration-none">
                                            <i class="fas fa-phone me-1 text-muted"></i>@Model.Phone
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not specified</span>
                                    }
                                </p>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="info-item">
                                <label class="form-label fw-semibold text-muted small">Address</label>
                                <p class="mb-0">@(Model.Address ?? "Not specified")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Academic Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <i class="fas fa-graduation-cap me-2 text-primary"></i>
                    <span class="fw-semibold">Academic Information</span>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="form-label fw-semibold text-muted small">Program</label>
                                <p class="mb-0">
                                    <span class="badge bg-light text-dark">@(Model.Program ?? "Not specified")</span>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="form-label fw-semibold text-muted small">Enrollment Date</label>
                                <p class="mb-0">@(Model.EnrollmentDate?.ToString("MMMM dd, yyyy") ?? "Not specified")</p>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="info-item">
                                <label class="form-label fw-semibold text-muted small">Account Created</label>
                                <p class="mb-0">@(Model.CreatedAt?.ToString("MMMM dd, yyyy 'at' h:mm tt") ?? "Not specified")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4">
            <!-- Quick Stats -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <i class="fas fa-chart-bar me-2 text-primary"></i>
                    <span class="fw-semibold">Quick Stats</span>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="border-end">
                                <h4 class="text-primary mb-1">#@Model.StudentID</h4>
                                <small class="text-muted">Student ID</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <h4 class="text-success mb-1">Active</h4>
                            <small class="text-muted">Status</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Admin Actions -->
            @if (User.IsInRole("Admin"))
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <i class="fas fa-cogs me-2 text-primary"></i>
                        <span class="fw-semibold">Admin Actions</span>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a asp-action="Edit" asp-route-id="@Model.StudentID" class="btn btn-warning">
                                <i class="fas fa-edit me-1"></i>Edit Student
                            </a>
                            <button type="button" class="btn btn-danger" onclick="confirmDelete(@Model.StudentID, '@Model.FullName')">
                                <i class="fas fa-trash me-1"></i>Delete Student
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete student <strong id="studentName"></strong>?</p>
                <p class="text-danger"><small>This action cannot be undone.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(studentId, studentName) {
            document.getElementById('studentName').textContent = studentName;
            document.getElementById('deleteForm').action = '/Student/Delete/' + studentId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}

<style>
    .avatar-lg {
        width: 80px;
        height: 80px;
        font-size: 24px;
    }
    
    .info-item {
        margin-bottom: 1rem;
    }
    
    .info-item:last-child {
        margin-bottom: 0;
    }
    
    .form-label {
        font-size: 0.875rem;
        margin-bottom: 0.25rem;
    }
    
    .card-body p {
        font-size: 1rem;
        margin-bottom: 0;
    }
    
    .border-end {
        border-right: 1px solid #dee2e6;
    }
    
    .card {
        border: none;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
    
    .card-header {
        border-bottom: 1px solid #dee2e6;
        background-color: #f8f9fa;
    }
    
    @@media (max-width: 768px) {
        .border-end {
            border-right: none;
            border-bottom: 1px solid #dee2e6;
            padding-bottom: 1rem;
            margin-bottom: 1rem;
        }
    }
</style> 