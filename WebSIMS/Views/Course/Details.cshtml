@model WebSIMS.Models.CourseListViewModel
@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    ViewData["Title"] = "Course Details";
}

<div class="container-fluid px-4">
    <div class="row">
        <div class="col-sm-12 col-md-8 mx-auto">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Course Details</h3>
                    <div>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model.CourseID" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                        }
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CourseCode)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.CourseCode)</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CourseName)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.CourseName)</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Credits)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Credits)</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Department)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Department)</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CreatedAt)</dt>
                                <dd class="col-sm-8">@(Model.CreatedAt?.ToString("MM/dd/yyyy HH:mm"))</dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="row mt-3">
                            <div class="col-12">
                                <h5>@Html.DisplayNameFor(model => model.Description)</h5>
                                <p class="text-muted">@Html.DisplayFor(model => model.Description)</p>
                            </div>
                        </div>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <hr />
                                <form asp-action="Delete" asp-route-id="@Model.CourseID" method="post" style="display: inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this course?')">
                                        <i class="fas fa-trash"></i> Delete Course
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 