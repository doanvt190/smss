@model WebSIMS.Models.CreateCourseViewModel
@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    ViewData["Title"] = "Create Course";
}

<div class="container-fluid px-4">
    <div class="row">
        <div class="col-sm-12 col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Create New Course</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CourseCode" class="form-label"></label>
                                    <input asp-for="CourseCode" class="form-control" placeholder="e.g., CS101" />
                                    <span asp-validation-for="CourseCode" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CourseName" class="form-label"></label>
                                    <input asp-for="CourseName" class="form-control" placeholder="e.g., Introduction to Computer Science" />
                                    <span asp-validation-for="CourseName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Credits" class="form-label"></label>
                                    <input asp-for="Credits" class="form-control" type="number" min="1" max="10" placeholder="3" />
                                    <span asp-validation-for="Credits" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Department" class="form-label"></label>
                                    <input asp-for="Department" class="form-control" placeholder="e.g., Computer Science" />
                                    <span asp-validation-for="Department" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter course description..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Course
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
