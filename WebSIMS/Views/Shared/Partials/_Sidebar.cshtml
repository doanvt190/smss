@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
}
<div id="layoutSidenav_nav">
    <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
        <div class="sb-sidenav-menu">
            <div class="nav">
                
                <a class="nav-link @(currentController == "Dashboard" ? "active" : "")" href="@Url.Action("Index", "Dashboard")">
                    <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                    Dashboard
                </a>
                @if (User.IsInRole("Admin") || User.IsInRole("Faculty"))
                {
                    <div class="sb-sidenav-menu-heading">Management</div>
                    <a class="nav-link @(currentController == "Student" ? "" : "collapsed")" href="#" data-bs-toggle="collapse" data-bs-target="#collapseLayouts" aria-expanded="@(currentController == "Student" ? "true" : "false")" aria-controls="collapseLayouts">
                        <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                        Students
                        <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                    </a>
                    <div class="collapse @(currentController == "Student" ? "show" : "")" id="collapseLayouts" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                        <nav class="sb-sidenav-menu-nested nav">
                            @if (User.IsInRole("Admin"))
                            {
                                <a class="nav-link @(currentController == "Student" && currentAction == "Create" ? "active" : "")" href="@Url.Action("Create", "Student")">Create new Student</a>
                            }
                            <a class="nav-link @(currentController == "Student" && currentAction == "Index" ? "active" : "")" href="@Url.Action("Index", "Student")">Student Lists</a>
                        </nav>
                    </div>
                }
                <a class="nav-link @(currentController == "Course" ? "" : "collapsed")" href="#" data-bs-toggle="collapse" data-bs-target="#collapsePages" aria-expanded="@(currentController == "Course" ? "true" : "false")" aria-controls="collapsePages">
                    <div class="sb-nav-link-icon"><i class="fas fa-book-open"></i></div>
                    Courses
                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                </a>
                <div class="collapse @(currentController == "Course" ? "show" : "")" id="collapsePages" aria-labelledby="headingTwo" data-bs-parent="#sidenavAccordion">
                    <nav class="sb-sidenav-menu-nested nav accordion" id="sidenavAccordionPages">
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="nav-link @(currentController == "Course" && currentAction == "Create" ? "active" : "collapsed")" href="@Url.Action("Create", "Course")">
                                Create new Course
                            </a>
                        }
                        <a class="nav-link @(currentController == "Course" && currentAction == "Index" ? "active" : "collapsed")" href="@Url.Action("Index", "Course")">
                            Course Lists
                        </a>
                    </nav>
                </div>
                <a class="nav-link @(currentController == "Class" ? "" : "collapsed")" href="#" data-bs-toggle="collapse" data-bs-target="#collapseClasses" aria-expanded="@(currentController == "Class" ? "true" : "false")" aria-controls="collapseClasses">
                    <div class="sb-nav-link-icon"><i class="fas fa-chalkboard-teacher"></i></div>
                    Classes
                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                </a>
                <div class="collapse @(currentController == "Class" ? "show" : "")" id="collapseClasses" aria-labelledby="headingThree" data-bs-parent="#sidenavAccordion">
                    <nav class="sb-sidenav-menu-nested nav accordion" id="sidenavAccordionClasses">
                        @if (User.IsInRole("Admin") || User.IsInRole("Faculty"))
                        {
                            <a class="nav-link @(currentController == "Class" && currentAction == "Create" ? "active" : "collapsed")" href="@Url.Action("Create", "Class")">
                                Create new Class
                            </a>
                        }
                        <a class="nav-link @(currentController == "Class" && currentAction == "Index" ? "active" : "collapsed")" href="@Url.Action("Index", "Class")">
                            Class Lists
                        </a>
                    </nav>
                </div>
                @if (User.IsInRole("Admin"))
                {
                    <a class="nav-link @(currentController == "Faculty" ? "" : "collapsed")" href="#" data-bs-toggle="collapse" data-bs-target="#collapseFaculty" aria-expanded="@(currentController == "Faculty" ? "true" : "false")" aria-controls="collapseFaculty">
                        <div class="sb-nav-link-icon"><i class="fas fa-user-tie"></i></div>
                        Faculty
                        <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                    </a>
                    <div class="collapse @(currentController == "Faculty" ? "show" : "")" id="collapseFaculty" aria-labelledby="headingFour" data-bs-parent="#sidenavAccordion">
                        <nav class="sb-sidenav-menu-nested nav accordion" id="sidenavAccordionFaculty">
                            <a class="nav-link @(currentController == "Faculty" && currentAction == "Create" ? "active" : "collapsed")" href="@Url.Action("Create", "Faculty")">
                                Create new Faculty
                            </a>
                            <a class="nav-link @(currentController == "Faculty" && currentAction == "Index" ? "active" : "collapsed")" href="@Url.Action("Index", "Faculty")">
                                Faculty Lists
                            </a>
                        </nav>
                    </div>
                }
            </div>
        </div>
        <div class="sb-sidenav-footer">
            <div class="small">Logged in as:</div>
            @User.Identity.Name
        </div>
    </nav>
</div>