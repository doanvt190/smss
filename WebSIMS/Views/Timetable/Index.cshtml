@model WebSIMS.Models.TimetableDisplayViewModel
@{
    ViewData["Title"] = "Timetable";
    Layout = "_LayoutMain";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Timetable</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Timetable</li>
    </ol>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <i class="fas fa-calendar me-1"></i>
                Weekly Timetable (@Model.WeekStart.ToString("MMM dd") - @Model.WeekEnd.ToString("MMM dd, yyyy"))
            </div>
            @if (User.IsInRole("Admin") || User.IsInRole("Faculty"))
            {
                <a asp-action="Create" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus me-1"></i> Add Timetable Entry
                </a>
            }
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 150px;">Time Slot</th>
                            <th>Monday</th>
                            <th>Tuesday</th>
                            <th>Wednesday</th>
                            <th>Thursday</th>
                            <th>Friday</th>
                            <th>Saturday</th>
                            <th>Sunday</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var timeSlot in Model.TimeSlots)
                        {
                            <tr>
                                <td class="table-secondary fw-bold" style="width: 150px;">
                                    <div class="text-center">
                                        <div class="small text-muted">@timeSlot.Split('(')[0].Trim()</div>
                                        <div class="small">@timeSlot.Split('(')[1].TrimEnd(')')</div>
                                    </div>
                                </td>
                                @foreach (var day in new[] { "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday" })
                                {
                                    var entry = Model.TimetableGrid.ContainsKey(day) && Model.TimetableGrid[day].ContainsKey(timeSlot) 
                                        ? Model.TimetableGrid[day][timeSlot] 
                                        : null;
                                    
                                    if (entry != null)
                                    {
                                        <td class="table-primary">
                                            <div class="p-2">
                                                <div class="fw-bold text-primary">@entry.ClassName</div>
                                                <div class="small">@entry.CourseCode - @entry.CourseName</div>
                                                <div class="small text-muted">@entry.FacultyName</div>
                                                <div class="small text-muted">Room: @entry.Room</div>
                                                <div class="small text-muted">@entry.StartTime.ToString("hh\\:mm") - @entry.EndTime.ToString("hh\\:mm")</div>
                                                @if (User.IsInRole("Admin") || User.IsInRole("Faculty"))
                                                {
                                                    <div class="mt-2">
                                                        <a asp-action="Edit" asp-route-id="@entry.ScheduleID" class="btn btn-warning btn-sm">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <form asp-action="Delete" asp-route-id="@entry.ScheduleID" method="post" style="display: inline;">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this timetable entry?')">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                }
                                            </div>
                                        </td>
                                    }
                                    else
                                    {
                                        <td class="table-light">
                                            @if (User.IsInRole("Admin") || User.IsInRole("Faculty"))
                                            {
                                                <div class="p-2 text-muted text-center">
                                                    <small><i class="fas fa-plus text-muted"></i><br>Add Schedule</small>
                                                    <div class="mt-1">
                                                        <a asp-action="Create" class="btn btn-outline-primary btn-sm"
                                                           title="Add schedule for @day - @timeSlot">
                                                            <i class="fas fa-plus"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="p-2"></div>
                                            }
                                        </td>
                                    }
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (Model.TimetableData.Any())
    {
        <div class="card">
            <div class="card-header">
                <i class="fas fa-list me-1"></i>
                All Timetable Entries
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Class</th>
                                <th>Course</th>
                                <th>Faculty</th>
                                <th>Day</th>
                                <th>Time</th>
                                <th>Room</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var entry in Model.TimetableData.OrderBy(e => e.DayOfWeek).ThenBy(e => e.StartTime))
                            {
                                <tr>
                                    <td>@entry.ClassName</td>
                                    <td>@entry.CourseCode - @entry.CourseName</td>
                                    <td>@entry.FacultyName</td>
                                    <td>@entry.DayOfWeek</td>
                                    <td>@entry.StartTime.ToString("hh\\:mm") - @entry.EndTime.ToString("hh\\:mm")</td>
                                    <td>@entry.Room</td>
                                    <td>
                                        @if (User.IsInRole("Admin") || User.IsInRole("Faculty"))
                                        {
                                            <a asp-action="Edit" asp-route-id="@entry.ScheduleID" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <form asp-action="Delete" asp-route-id="@entry.ScheduleID" method="post" style="display: inline;">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this timetable entry?')">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center">
                <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No timetable entries found</h5>
                <p class="text-muted">Start by adding timetable entries for your classes.</p>
                @if (User.IsInRole("Admin") || User.IsInRole("Faculty"))
                {
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i> Add First Entry
                    </a>
                }
            </div>
        </div>
    }
</div> 