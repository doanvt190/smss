@model WebSIMS.Models.EditTimetableViewModel
@{
    ViewData["Title"] = "Edit Timetable Entry";
    Layout = "_LayoutMain";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Edit Timetable Entry</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-controller="Timetable" asp-action="Index">Timetable</a></li>
        <li class="breadcrumb-item active">Edit</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-edit me-1"></i>
            Edit Timetable Entry
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ScheduleID" />
                
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="ClassID" class="form-label"></label>
                            <select asp-for="ClassID" class="form-select" asp-items="@(new SelectList(Model.AvailableClasses, "ClassID", "DisplayName"))">
                                <option value="">-- Select Class --</option>
                            </select>
                            <span asp-validation-for="ClassID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="DayOfWeek" class="form-label"></label>
                            <select asp-for="DayOfWeek" class="form-select" asp-items="@(new SelectList(Model.DaysOfWeek))">
                                <option value="">-- Select Day --</option>
                            </select>
                            <span asp-validation-for="DayOfWeek" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="mb-3">
                            <label class="form-label">Time Slot</label>
                            <select id="timeSlotSelect" class="form-select">
                                <option value="">-- Select Time Slot --</option>
                                @foreach (var timeSlot in Model.TimeSlotOptions)
                                {
                                    <option value="@timeSlot.StartTime.ToString(@"hh\:mm")-@timeSlot.EndTime.ToString(@"hh\:mm")" 
                                            data-start="@timeSlot.StartTime.ToString(@"hh\:mm")" 
                                            data-end="@timeSlot.EndTime.ToString(@"hh\:mm")">
                                        @timeSlot.DisplayName
                                    </option>
                                }
                            </select>
                            <small class="form-text text-muted">Select a predefined time slot or enter custom times below</small>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="StartTime" class="form-label"></label>
                            <input asp-for="StartTime" class="form-control" type="time" />
                            <span asp-validation-for="StartTime" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="EndTime" class="form-label"></label>
                            <input asp-for="EndTime" class="form-control" type="time" />
                            <span asp-validation-for="EndTime" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Room" class="form-label"></label>
                            <input asp-for="Room" class="form-control" placeholder="e.g., Room 101, Lab A, etc." />
                            <span asp-validation-for="Room" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back to Timetable
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Update Entry
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (Model.AvailableClasses.Any())
    {
        <div class="card">
            <div class="card-header">
                <i class="fas fa-info-circle me-1"></i>
                Available Classes
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Class Name</th>
                                <th>Course</th>
                                <th>Faculty</th>
                                <th>Semester</th>
                                <th>Year</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var classItem in Model.AvailableClasses)
                            {
                                <tr>
                                    <td>@classItem.ClassName</td>
                                    <td>@classItem.CourseCode - @classItem.CourseName</td>
                                    <td>@classItem.FacultyName</td>
                                    <td>@classItem.Semester</td>
                                    <td>@classItem.Year</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Handle time slot selection
            $('#timeSlotSelect').on('change', function() {
                var selectedOption = $(this).find('option:selected');
                var startTime = selectedOption.data('start');
                var endTime = selectedOption.data('end');
                
                if (startTime && endTime) {
                    $('#StartTime').val(startTime);
                    $('#EndTime').val(endTime);
                }
            });

            // Auto-fill end time when start time changes
            $('#StartTime').on('change', function() {
                var startTime = $(this).val();
                if (startTime) {
                    var start = new Date('2000-01-01T' + startTime);
                    var end = new Date(start.getTime() + 60 * 60 * 1000); // Add 1 hour
                    var endTime = end.toTimeString().substring(0, 5);
                    $('#EndTime').val(endTime);
                }
            });

            // Validate that end time is after start time
            $('#EndTime').on('change', function() {
                var startTime = $('#StartTime').val();
                var endTime = $(this).val();
                
                if (startTime && endTime && startTime >= endTime) {
                    alert('End time must be after start time.');
                    $(this).val('');
                }
            });

            // Clear time slot selection when manually entering times
            $('#StartTime, #EndTime').on('input', function() {
                $('#timeSlotSelect').val('');
            });
        });
    </script>
} 