@model IEnumerable<WebSIMS.Models.ClassEnrollmentViewModel>

@{
    ViewData["Title"] = "Class Enrollments";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Class Enrollments</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-controller="Class" asp-action="Index">Classes</a></li>
        <li class="breadcrumb-item active">Enrollments</li>
    </ol>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <i class="fas fa-users me-1"></i>
                    Enrollments for @ViewBag.ClassName
                </div>
                @if (User.IsInRole("Admin") || User.IsInRole("Faculty"))
                {
                    <a asp-action="Enroll" asp-route-id="@ViewBag.ClassID" class="btn btn-primary btn-sm">
                        <i class="fas fa-user-plus"></i> Add Student
                    </a>
                }
            </div>
        </div>
        <div class="card-body">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <ul class="mb-0">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <table class="table table-striped table-hover" id="enrollmentsTable">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.StudentName)</th>
                        <th>@Html.DisplayNameFor(model => model.StudentEmail)</th>
                        <th>@Html.DisplayNameFor(model => model.EnrollmentDate)</th>
                        <th>@Html.DisplayNameFor(model => model.Status)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.StudentName)</td>
                                <td>@Html.DisplayFor(modelItem => item.StudentEmail)</td>
                                <td>@Html.DisplayFor(modelItem => item.EnrollmentDate)</td>
                                <td>
                                    <span class="badge @(item.Status == "Active" ? "bg-success" : item.Status == "Dropped" ? "bg-danger" : "bg-warning")">
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </span>
                                </td>
                                <td>
                                    @if (User.IsInRole("Admin") || User.IsInRole("Faculty"))
                                    {
                                        <button type="button" class="btn btn-danger btn-sm" onclick="confirmRemoveEnrollment(@item.EnrollmentID, @ViewBag.ClassID)">
                                            <i class="fas fa-user-minus"></i> Remove
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">No enrollments found for this class.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Remove Enrollment Confirmation Modal -->
<div class="modal fade" id="removeEnrollmentModal" tabindex="-1" aria-labelledby="removeEnrollmentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="removeEnrollmentModalLabel">Confirm Remove Student</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to remove this student from the class?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="removeEnrollmentForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Remove</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmRemoveEnrollment(enrollmentId, classId) {
            const modal = new bootstrap.Modal(document.getElementById('removeEnrollmentModal'));
            const form = document.getElementById('removeEnrollmentForm');
            form.action = `/Class/RemoveEnrollment?enrollmentId=${enrollmentId}&classId=${classId}`;
            modal.show();
        }

        $(document).ready(function () {
            $('#enrollmentsTable').DataTable({
                responsive: true,
                order: [[0, 'asc']]
            });
        });
    </script>
} 